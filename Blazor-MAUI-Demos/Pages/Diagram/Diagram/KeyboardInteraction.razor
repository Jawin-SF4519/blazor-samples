    // Method to execute the custom command
    public void ExecuteCommand(CommandKeyArgs obj)
    {
        Diagram.BeginUpdate();
        switch (obj.Name)
        {
            case "customGroup":
                Diagram.Group();
                break;
            case "customUngroup":
                Diagram.Ungroup();
                break;
            case "navigateUp":
                _ = this.NavigateLevels(false);
                break;
            case "navigateDown":
                _ = this.NavigateLevels(true);
                break;
            case "navigateLeft":
                _ = this.NavigateToSiblings(false);
                break;
            case "navigateRight":
                _ = this.NavigateToSiblings(true);
                break;
